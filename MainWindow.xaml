        <TextBox x:Name="txtusername" Grid.Column="3" HorizontalAlignment="Left" Margin="165,135,0,0" VerticalAlignment="Top" Width="180" Height="35" ></TextBox>
        <PasswordBox x:Name="txtpassword" Grid.Column="3" HorizontalAlignment="Left" Margin="165,185,0,0" VerticalAlignment="Top" Height="35" Width="180"></PasswordBox>
        <Button Grid.Column="3" Content="Giris" HorizontalAlignment="Left" Margin="127,294,0,0" VerticalAlignment="Top" Height="35" Width="110" Name="Login" Click="Login_click" FontSize="22" Background="BurlyWood" FontWeight="Bold" FontFamily="Modern No. 20"></Button>
        <Image Source="Images\cinema.png" Width="174" HorizontalAlignment="Left" Margin="21,13,0,-2" Grid.Column="1"/>
    </Grid>
</Window>
