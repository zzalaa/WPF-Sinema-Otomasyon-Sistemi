<Window x:Class="WPFSinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSinema"
        mc:Ignorable="d"
        Title="Giris" Height="450" Width="800" Background="Bisque">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="195"/>
            <ColumnDefinition Width="27"/>
            <ColumnDefinition Width="578*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Sinema Yönetim Otomasyonu" FontSize="50" FontWeight="Bold" HorizontalAlignment="Left"  Margin="98,30,0,0"  VerticalAlignment="Top" Height="62" Width="633" Grid.ColumnSpan="3" FontFamily="Modern No. 20" ></Label>
        <Label Grid.Column="3" Content="Kullanıcı Adı:" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="16,133,0,0"  VerticalAlignment="Top" Height="35" Width="150" FontFamily="Modern No. 20"></Label>
